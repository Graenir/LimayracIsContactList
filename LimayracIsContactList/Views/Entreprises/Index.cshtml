@model IEnumerable<LimayracIsContactList.Application.DTO.EntrepriseDto>

@{
    ViewData["Title"] = "Index";
}
<div class="container-panel">
    <div class="container">
        <h1>Index</h1>


        <table id="table_id" class="display">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Siren)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.City)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TelNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.WebSite)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Siren)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.City)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TelNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.WebSite)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="far fa-edit"></a> |
                            <a asp-action="Details" asp-route-id="@item.Id" class="far fa-eye"></a> |
                            <a asp-action="Delete" asp-route-id="@item.Id" class="far fa-trash-alt"></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="footer-button">
        <a asp-action="Create" class="btn btn-info">Create New</a>
    </div>
</div>
@section Scripts{

    <script>
        $(function () {
            $('#table_id').DataTable( {
        "scrollY":        "20em",
        "scrollCollapse": true
    } );

        });
    </script>
}